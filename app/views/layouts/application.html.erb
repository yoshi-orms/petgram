<!DOCTYPE html>
<html>
  <head>
    <title>Petgram</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>


    <%= link_to root_path, class: "navbar-item" do %>
      <h1 class="title is-4" style="font-family: cursive;">petgram</h1>
    <% end %>

    <% if user_signed_in? %>
      <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "button is-warning is-light" %>
    <% else %>
      <%= link_to "ログイン", new_user_session_path, class: "button is-warning is-light" %>
      <%= link_to "新規登録", new_user_registration_path, class: "button is-warning is-light" %>
    <% end %>

    <%= yield %>
  </body>
</html>
